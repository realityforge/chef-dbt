devhost: &devhost
  appname: dbt
  username: <%= @username %>
  password: <%= @password %>
  host: <%= @host %>
  port: <%= @port %>
  force_drop: <%= @recreate %>
  no_create: false
  reindex_on_import: <%= @reindex_on_import %>
  shrink_on_import: <%= @shrink_on_import %>

production:
  database: <%= @database_name %>
  <<: *devhost

import:
  database: <%= @last_database_name %>
  <<: *devhost

<% @linked_databases.each_pair do |key, database_name| -%>
<%= key %>_production:
  database: <%= database_name %>
  <<: *devhost

<%= key %>_import:
  database: <%= database_name %>
  <<: *devhost
<% end -%>
